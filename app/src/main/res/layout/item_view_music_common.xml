<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_touch_bg">

    <View
        android:id="@+id/view_play_tag"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_main_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_chip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#616161"
            android:maxLines="2"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_chip_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#88616161"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_chip_opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:src="@mipmap/btn_music_download_normal" />
</LinearLayout>
